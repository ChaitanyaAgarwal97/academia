div(id="createAnnouncementModal" class="modal")
    div(class="modal-content")
        span(class="close") &times;

        //- Modal heading
        h4(class="mb-4") New Announcement

        // Modal Form
        form(method="POST" action="/announcement/create" enctype="multipart/form-data")
            input(type="hidden" name="class" value=classObj._id)

            div(class="mb-4")
                label(for="description" class="form-label") Description
                textarea(name="description" id="description" cols="30" rows="5" class="form-control" required=true) 

            div(class="mb-4")
                label(for="last-date" class="form-label") Last Date
                input(type="date" id="last-date" class="form-control" name="last_date" min=`${new Date().toLocaleDateString()}`)

            div(class="mb-4")
                label(for="points" class="form-label") Points
                div(class="d-flex flex-wrap mb-0")
                    input(type="range" id="points" value="0" name="points" min=0 max=100 class="form-range" list="values")
                    div(id="rangeValue") 0
                datalist(id="values" class="d-flex justify-content-between mt-0")
                    option(value="0" label="0")
                    option(value="100" label="100")

            div(class="mb-4")        
                label(for="file" class="form-label") Add file 
                input(type="file" class="form-control mb-3" id="file" name="file" accept=".pdf, image/*" multiple=true)

            button(type="submit" class="btn btn-primary mt-1 mb-1") Submit